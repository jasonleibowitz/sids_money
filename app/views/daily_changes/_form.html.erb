<div class="container">
  <div class="row">
    <div class="col-md-5">
      <%= form_for @daily_change do |f| %>

        <div class="form-group">
          <%= f.label :value %>
          <%= f.number_field :value, step: 'any', class: 'form-control' %>
        </div>

        <div class="form-group">
        <%= f.label :date %>
        <%= f.date_field :date, value: Date.today, class: 'form-control' %>
        </div>

        <%= f.submit class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
</div>


